<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Image For Row Item Food"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_food"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:maxLines="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_food_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_food" />

        <TextView
            android:id="@+id/tv_price_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_category"
            android:textAlignment="textEnd"
            android:text="12K"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"/>

        <TextView
            android:id="@+id/tv_item_cooked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cooked"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/tv_price_food" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>